<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
    <Button
            android:text="3"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b3"
            app:layout_constraintStart_toEndOf="@+id/b2" app:layout_constraintBottom_toTopOf="@+id/b6"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="7"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b7"
            app:layout_constraintBottom_toTopOf="@+id/b0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="6"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b6"
            app:layout_constraintStart_toEndOf="@+id/b5" android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/b9" android:layout_marginBottom="10dp"/>
    <Button
            android:text="4"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b4"
            app:layout_constraintBottom_toTopOf="@+id/b7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="000"
            android:textSize="24dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b000"
            app:layout_constraintStart_toEndOf="@+id/b00" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="9"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b9"
            app:layout_constraintStart_toEndOf="@+id/b8" app:layout_constraintBottom_toTopOf="@+id/b000"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="2"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b2"
            app:layout_constraintStart_toEndOf="@+id/b1" app:layout_constraintBottom_toTopOf="@+id/b5"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="5"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b5"
            app:layout_constraintStart_toEndOf="@+id/b4" app:layout_constraintBottom_toTopOf="@+id/b8"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="00"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b00"
            app:layout_constraintStart_toEndOf="@+id/b0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="0"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="1"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b1"
            app:layout_constraintBottom_toTopOf="@+id/b4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="8"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/b8"
            app:layout_constraintStart_toEndOf="@+id/b7" app:layout_constraintBottom_toTopOf="@+id/b00"
            android:layout_marginBottom="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="C"
            android:textSize="30dp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="116dp"
            android:layout_height="80dp" android:id="@+id/cleanInput"
            app:layout_constraintStart_toEndOf="@+id/b3"
            app:layout_constraintBottom_toTopOf="@+id/copy" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Copy"
            android:textSize="25dp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="119dp"
            android:layout_height="80dp" android:id="@+id/copy"
            app:layout_constraintStart_toEndOf="@+id/b6"
            app:layout_constraintBottom_toTopOf="@+id/switchValues" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Switch"
            android:textSize="18dp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="116dp"
            android:layout_height="80dp" android:id="@+id/switchValues"
            app:layout_constraintStart_toEndOf="@+id/b9"
            app:layout_constraintBottom_toTopOf="@+id/comma" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:background="@drawable/roundedbutton"
            android:text="."
            android:textSize="30dp"
            android:onClick="toolBtnOnClick"
            android:layout_width="116dp"
            android:layout_height="80dp" android:id="@+id/comma"
            app:layout_constraintStart_toEndOf="@+id/b000"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.tabs.TabLayout
            android:layout_width="414dp"
            android:layout_height="47dp"
            android:id="@+id/TabUnits"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Длина" android:id="@+id/DistanceItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Масса" android:id="@+id/WeightItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Данные" android:id="@+id/DataItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Крипто валюта" android:id="@+id/CryptoItem"/>
    </com.google.android.material.tabs.TabLayout>
    <EditText
            android:text="0"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/input"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/OutputSpinner"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:text="0"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/output"
            app:layout_constraintBottom_toTopOf="@+id/b3"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="48dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="412dp"
            android:layout_height="48dp" android:id="@+id/OutputSpinner"
            android:minHeight="48dp" app:layout_constraintBottom_toTopOf="@+id/output"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:entries="@array/distance_list"/>
    <Spinner
            android:layout_width="411dp"
            android:layout_height="48dp" android:id="@+id/InputSpinner"
            android:minHeight="48dp" app:layout_constraintBottom_toTopOf="@+id/input"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:entries="@array/distance_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>