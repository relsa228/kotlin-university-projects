<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
    <Button
            android:text="3"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b3"
            app:layout_constraintStart_toEndOf="@+id/b2" app:layout_constraintBottom_toTopOf="@+id/b6"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>
    <Button
            android:text="7"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b7"
            app:layout_constraintBottom_toTopOf="@+id/b0"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="6"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b6"
            app:layout_constraintStart_toEndOf="@+id/b5" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/b9" android:layout_marginBottom="8dp"/>
    <Button
            android:text="4"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b4"
            app:layout_constraintBottom_toTopOf="@+id/b7"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="."
            android:textSize="34sp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/comma"
            app:layout_constraintStart_toEndOf="@+id/b00"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="9"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b9"
            app:layout_constraintStart_toEndOf="@+id/b8" app:layout_constraintBottom_toTopOf="@+id/comma"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="2"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b2"
            app:layout_constraintStart_toEndOf="@+id/b1" app:layout_constraintBottom_toTopOf="@+id/b5"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>
    <Button
            android:text="5"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b5"
            app:layout_constraintStart_toEndOf="@+id/b4" app:layout_constraintBottom_toTopOf="@+id/b8"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="00"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b00"
            app:layout_constraintStart_toEndOf="@+id/b0"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="0"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="1"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b1"
            app:layout_constraintBottom_toTopOf="@+id/b4"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="8"
            android:textSize="30dp"
            android:onClick="numBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="80dp"
            android:layout_height="70dp" android:id="@+id/b8"
            app:layout_constraintStart_toEndOf="@+id/b7" app:layout_constraintBottom_toTopOf="@+id/b00"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="C"
            android:textSize="30dp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="100dp"
            android:layout_height="70dp" android:id="@+id/cleanInput"
            app:layout_constraintStart_toEndOf="@+id/b6"
            app:layout_constraintBottom_toTopOf="@+id/copy"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Copy"
            android:textSize="22sp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="100dp"
            android:layout_height="70dp" android:id="@+id/copy"
            app:layout_constraintStart_toEndOf="@+id/b9"
            app:layout_constraintBottom_toTopOf="@+id/switchValues"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Switch"
            android:textSize="15dp"
            android:onClick="toolBtnOnClick"
            android:background="@drawable/roundedbutton"
            android:layout_width="100dp"
            android:layout_height="70dp" android:id="@+id/switchValues"
            app:layout_constraintStart_toEndOf="@+id/comma"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:background="@drawable/roundedbutton"
            android:text="del"
            android:textSize="24dp"
            android:onClick="toolBtnOnClick"
            android:layout_width="100dp"
            android:layout_height="70dp" android:id="@+id/delete"
            app:layout_constraintBottom_toTopOf="@+id/cleanInput"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/b3"
            android:layout_marginStart="8dp" tools:ignore="HardcodedText"/>
    <com.google.android.material.tabs.TabLayout
            android:layout_width="380dp"
            android:layout_height="44dp"
            android:id="@+id/TabUnits"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/cleanInput"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="12dp">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Длина" android:id="@+id/DistanceItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Масса" android:id="@+id/WeightItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Данные" android:id="@+id/DataItem"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="tabBtnOnClick"
                android:text="Крипто валюта" android:id="@+id/CryptoItem"/>
    </com.google.android.material.tabs.TabLayout>
    <EditText
            android:text="0"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="380dp"
            android:layout_height="62dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/input"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/InputSpinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@+id/copy"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:text="0"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="380dp"
            android:layout_height="62dp"
            android:inputType="numberDecimal"

            android:ems="10"
            android:id="@+id/output"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/OutputSpinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@+id/delete"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner
            android:textSize="16sp"
            android:layout_width="380dp"
            android:layout_height="48dp" android:id="@+id/OutputSpinner"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:entries="@array/distance_list"
            app:layout_constraintTop_toBottomOf="@+id/input"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/switchValues" app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner
            android:textSize="16sp"
            android:layout_width="380dp"
            android:layout_height="48dp" android:id="@+id/InputSpinner"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:entries="@array/distance_list"
            app:layout_constraintTop_toBottomOf="@+id/TabUnits"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/cleanInput" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginEnd="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>